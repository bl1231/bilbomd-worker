{
  "name": "bilbomd-worker",
  "version": "0.0.8",
  "description": "A worker app to process BilboMD jobs from BullMQ queue",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf build/*",
    "copy-assets": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./build",
    "lint": "eslint . --ext .ts",
    "tsc": "tsc",
    "build": "npm-run-all clean copy-assets lint tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "npm run build && node build/worker.js",
    "test": "NODE_ENV=test jest --testTimeout=5000 --runInBand --verbose --detectOpenHandles",
    "worker": "nodemon ."
  },
  "keywords": [],
  "author": "Scott Classen",
  "license": "ISC",
  "dependencies": {
    "bullmq": "^4.7.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "mongoose": "^7.4.3",
    "mongoose-sequence": "^5.3.1",
    "nodemailer": "^6.9.4",
    "nodemailer-express-handlebars": "^6.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.9",
    "@types/nodemailer-express-handlebars": "^4.0.2",
    "@types/shelljs": "^0.8.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.47.0",
    "fs-extra": "^11.1.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^5.1.6"
  }
}
